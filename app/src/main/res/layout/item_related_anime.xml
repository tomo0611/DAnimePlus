<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_related_thumbnail"
        android:layout_width="192dp"
        android:layout_height="108dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/_7198001_1_1"
        android:contentDescription="@string/episode_image" />


    <TextView
        android:id="@+id/text_related_work_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image_related_thumbnail"
        app:layout_constraintTop_toTopOf="@id/image_related_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="時々ボソッとロシア語でデレる隣のアーリャさん「幼馴染とは？」" />

</androidx.constraintlayout.widget.ConstraintLayout>